<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OrderDonutActivity" android:background="#D6A1A1">
    <ImageView
            android:layout_width="356dp"
            android:layout_height="245dp" app:srcCompat="@drawable/donuts" android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.486"
            android:contentDescription="@string/donut" android:translationZ="10dp"/>
    <ListView
            android:layout_width="372dp"
            android:layout_height="399dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginTop="12dp"
            android:id="@+id/donutsList"
            android:entries="@array/donutArray"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTintMode="src_over" android:background="@drawable/button_shape"
            android:backgroundTint="#DAA8AA" android:translationZ="6dp" app:layout_constraintHorizontal_bias="0.476"/>
</androidx.constraintlayout.widget.ConstraintLayout>