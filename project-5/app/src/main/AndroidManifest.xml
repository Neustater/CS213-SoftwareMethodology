<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.softwaremeth.rucafe">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".OrderDonutQuantityActivity"
                  android:label="Order Donut Quantity"
                  android:parentActivityName=".OrderDonutActivity">
        </activity>
        <activity android:name=".StoreOrdersActivity"
                  android:label="Store Orders"
                  android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".UserOrdersActivity"
                  android:label="User Orders"
                  android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".OrderCoffeeActivity"
                  android:label="Order Coffee"
                  android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".OrderDonutActivity"
                  android:label="Select Donut Type"
                  android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".MainActivity"
                  android:label="RU Cafe">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>